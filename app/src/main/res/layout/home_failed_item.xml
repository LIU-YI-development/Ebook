<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:layoutDirection="rtl"
    android:gravity="center"
    android:background="#fafafa"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text="@string/no_internet_connection"
        android:textSize="17sp"
        android:gravity="center"
        android:padding="12dp"
        android:layout_marginStart="16dp"
        android:id="@+id/txt_error"/>

    <Button
        android:id="@+id/btn_retry"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@id/txt_error"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:layout_centerInParent="true"
        android:textAllCaps="false"
        android:text="Retry"/>


    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text="Access downloaded books in offline mode"
        android:textSize="17sp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="12dp"
        android:layout_marginTop="32dp"
        android:layout_below="@id/btn_retry"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:id="@+id/txt_error_tip"/>

    <Button
        android:id="@+id/btn_go_to_mybooks"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@id/txt_error_tip"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:textAllCaps="false"
        android:layout_centerInParent="true"
        android:text="Go to bookshelf"/>

</RelativeLayout>