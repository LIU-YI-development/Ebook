<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_horizontal"

        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Connect With Us"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/instagram_page"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/bg_rate_us"
                android:drawableLeft="@drawable/instagram_lg"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:onClick="openInstagramPage"
                android:paddingStart="16dp"
                android:paddingEnd="12dp"
                android:text="@string/text_instagram"
                android:textSize="17sp" />

            <Button
                android:id="@+id/facebook_page"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_rate_us"
                android:drawableLeft="@drawable/ic_facebook_lg"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:onClick="openFacebookPage"
                android:paddingStart="16dp"
                android:paddingEnd="12dp"
                android:text="@string/text_fb"
                android:textSize="17sp" />

            <Button
                android:id="@+id/telegram_channel"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_rate_us"
                android:drawableLeft="@drawable/telegram_lg"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:onClick="openTelegramChannel"
                android:paddingStart="16dp"
                android:paddingEnd="12dp"
                android:text="Telegram"
                android:textSize="17sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>